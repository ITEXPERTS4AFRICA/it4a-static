const achievements = [
  {
    icon: Trophy,
    title: "20+ Projects",
    description: "Successfully delivered IT projects",
    count: 35,
  },
  {
    icon: Users,
    title: "18+ Clients",
    description: "Companies that place their trust in us",
    count: 18,
  },
  {
    icon: Award,
    title: "Certifications",
    description: "Certified partner of leading global brands",
    count: 10,
  },
