const addValueCompany = [
  {
    title: "Excellence",
    description:
      "Delivering impeccable quality through certified and seasoned engineers with 10 to 20 years of experience at world-renowned technology leaders.",
  },
  {
    title: "Innovation",
    description:
      "Continuously integrating the latest advancements (cloud, cybersecurity, smart networks, applications) to anticipate tomorrow’s needs.",
  },
  {
    title: "Commitment",
    description:
      "Placing client satisfaction at the forefront, with a culture rooted in rigor, reliability, and sustainable performance.",
  },
  {
